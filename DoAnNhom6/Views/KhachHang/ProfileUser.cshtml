@model DoAnNhom6.ViewModels.ProfileVM
<section style="background-color: #eee;">
  <div class="container py-5">

    <div class="row">
      <div class="col-lg-4">
        <div class="card mb-4">
          <div class="card-body text-center">
                        <img src="~/Hinh//Hinh/KhachHang/@Model.Hinh" alt="avatar"
              class="rounded-circle img-fluid" style="width: 150px;">
                        <h5 class="my-3">@Html.DisplayFor(model => model.HoTen)</h5>
                        <div class="my-3">
                            @{
                                if (Model.DanhGia == null)
                                {
                                    <p>Chưa có đánh giá</p>
                                }
                                else
                                {
                                    for (int i = 1; i <= Model.DanhGia; i++)
                                    {
                                        <i class="fas fa-star text-primary"></i>
                                    }
                                }


                            }
                        </div>
            <p class="text-muted mb-1">@Html.DisplayFor(model => model.GioiTinh)</p>
                        <p class="text-muted mb-4">@Html.DisplayFor(model => model.Email)</p>
            <div class="d-flex justify-content-center mb-2">
              <button type="button" class="btn btn-secondary">Follow</button>
              <button type="button" class="btn btn-outline-primary ms-1">Message</button>
            </div>
          </div>
        </div>
        <div class="card mb-4 mb-lg-0">
          <div class="card-body p-0">
            <ul class="list-group list-group-flush rounded-3">
                <a asp-action="ProfileTD">
              <li class="list-group-item d-flex justify-content-between align-items-center p-3 btn border-secondary">
                <i class="fab fa-twitter fa-lg" style="color: #55acee;"></i>
                <p class="mb-0">Quản Lý Công Việc</p>
                </a>
              </li>
                            <a asp-action="Profile">
                            <li class="list-group-item d-flex justify-content-between align-items-center p-3 btn border-secondary">
                    <i class="fab fa-instagram fa-lg" style="color: #ac2bac;"></i>
                    <p class="mb-0">Đang Xử Lý</p>
                </li>
                            </a>
              <li class="list-group-item d-flex justify-content-between align-items-center p-3 btn border-secondary">
                <i class="fab fa-instagram fa-lg" style="color: #ac2bac;"></i>
                <p class="mb-0">Lịch Sử</p>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center p-3 btn border-secondary">
                <i class="fab fa-facebook-f fa-lg" style="color: #3b5998;"></i>
                <p class="mb-0">Cài Đặt</p>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div class="col-lg-8">
        <div class="card mb-4">
          <div class="card-body col-lg-8">
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Trạng Thái</p>
              </div>
              <div class="col-sm-9">
                                <p class="text-muted mb-0">@Html.DisplayFor(model => model.TrangThai)</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Địa Chỉ</p>
              </div>
              <div class="col-sm-9">
                                <p class="text-muted mb-0">@Html.DisplayFor(model => model.DiaChi)</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Lượt Đăng Bài</p>
              </div>
              <div class="col-sm-9">
                                <p class="text-muted mb-0">@Html.DisplayFor(model => model.GoiDangBai)</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Hiệu Lực</p>
              </div>
              <div class="col-sm-9">
                                <p class="text-muted mb-0">@Html.DisplayFor(model => model.HieuLuc)</p>
              </div>
            </div>
            <hr>
          
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="card mb-4 mb-md-0">
              <div class="card-body">
                <p class="mb-4"><span class="text-primary font-italic me-1">assigment</span> Project Status
                </p>
                <p class="mb-1" style="font-size: .77rem;">Web Design</p>
                <div class="progress rounded" style="height: 5px;">

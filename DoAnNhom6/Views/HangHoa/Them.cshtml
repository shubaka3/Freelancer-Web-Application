@model DoAnNhom6.Models.CongViec;
@{
    ViewData["Title"] = "DangKy";
}

<h1>DangKy</h1>
<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4">Thêm hàng hóa</h1>
        <form asp-action="Them">
            <div class="row">
                <div class="row">
                    <div class="col-md-12 col-lg-6">
                        <div class="form-item w-100">
                            <label asp-for="@Model.TenCv" class="form-label my-3"></label><sup>*</sup>
                            @*  Tên đăng nhập từ display RestigerVM mà ra *@
                            <input asp-for="@Model.TenCv" type="text" class="form-control">
                            <span asp-validation-for="@Model.TenCv" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-item">
                        <label class="form-label my-3" asp-for="@Model.DonGia"></label><sup>*</sup>
                        <input asp-for="@Model.DonGia" class="form-control" />
                        <span asp-validation-for="@Model.DonGia" class="text-danger"></span>
                    </div>

                    <div class="form-item">
                        <label class="form-label my-3" asp-for="@Model.MaLoai"></label><sup>*</sup>
                        <input asp-for="@Model.MaLoai" class="form-control" />
                        <span asp-validation-for="@Model.MaLoai" class="text-danger"></span>
                    </div>


                </div>
                <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                    <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Thêm</button>
                </div>
            </div>
        </form>
    </div>
</div>


@model IEnumerable<DoAnNhom6.ViewModels.CongViecVM>

<div class="row g-4">
@foreach (var item in Model)
{

        <div class="col-md-6 col-lg-6 col-xl-4">
            <div class="rounded position-relative fruite-item">
                <div class="p-4 border border-secondary border-top-0 rounded-bottom">
                     <a asp-action="Detail" asp-controller="HangHoa" asp-route-id="@item.MaCV">    
                    <h4>@item.TenCV</h4>
                    <p>
                       @item.MoTaNgan
                    </p>
                    </a>
                    <div class="d-flex justify-content-between flex-lg-wrap">
                        <p class="text-dark fs-5 fw-bold mb-0">Lương: $@item.DonGia</p>
                     
                   @*      <a href="#" class="btn border border-secondary rounded-pill px-3 text-primary"><i class="fa fa-shopping-bag me-2 text-primary"></i>Ứng tuyển</a> *@
                        <a asp-action="AddToCart" asp-controller="Cart" asp-route-id="@item.MaCV" class="btn border border-secondary rounded-pill px-3 text-primary"> Apply Now</a>
                    </div>
                </div>
            </div>
        </div>
}
  
</div>